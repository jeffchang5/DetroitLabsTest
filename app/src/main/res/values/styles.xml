<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Disables the default ActionBar provided by Android and AppCompat -->


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomExpandedAppBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/toolbarExpandedFontSize</item>
    </style>

    <style name="CustomCollapsedAppBarTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/toolbarCollapsedFontSize</item>
    </style>


</resources>
